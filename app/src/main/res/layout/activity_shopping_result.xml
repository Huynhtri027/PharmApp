<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.jakub.pharmapp.ShoppingResult">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip">

    <TextView android:text="Cena" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"
        android:layout_marginRight="5dip" />

    <TextView
        android:text="15.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultprice"
        android:textSize="30dip"
        android:layout_marginRight="5dip" />

        <TextView
            android:text="zł"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dip">

    <TextView
        android:text="Na recepte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="15dip"
        android:layout_marginRight="5dip" />

    <TextView
        android:text="tak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultrecipe"
        android:textSize="20dip" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultlistView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nowe zamówienie"
        android:id="@+id/neworderbutton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
